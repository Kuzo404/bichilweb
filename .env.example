# ============================================
# Frontend - Environment Variables
# Copy this file to .env.local and fill in the values
# ============================================

# --- Django Backend API ---
# Full API URL with /api/v1 path (used in client-side components)
NEXT_PUBLIC_API_URL=http://your-backend-domain:8000/api/v1

# Media/image base URL without trailing slash (used for image src attributes)
NEXT_PUBLIC_MEDIA_URL=http://your-backend-domain:8000

# Server-side API URL (used in Next.js API routes / server components)
BACKEND_API_URL=http://your-backend-domain:8000/api/v1

# Server-side base URL
BACKEND_URL=http://your-backend-domain:8000

# --- Environment ---
NODE_ENV=development
